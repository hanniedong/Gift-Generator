<div class = "page-header">
  <h2> Gift Ideas for  <%= @receiver.first_name %> </h2>
</div>

  <%= link_to 'New Gift Idea', new_receiver_gift_path(:receiver_id => @receiver.id), :class => "btn btn-warning btn-lg"  %> <br> <br>

<ul class="list-group">
  <% @gifts.each do |gift| %>
    <li class="list-group-item">
      <h3> <%= gift.title %> </h3>
      <h4> Cost: $<%= gift.cost %> </h4> 
      <h4> Description: <%= gift.description %> </h4>
      <h4> <%= link_to "link", gift.link %> </h4>
    </li>
  <% end %>
</ul>


<div class = 'btn-group'>
  <%= link_to 'Back', root_path, :class => "btn btn-warning btn-lg"  %>
</div>