<div class = "container-fluid">
  <h1> Login </h1>

  <% if @errors && @errors.any? %>
    <ul>
      <% @errors.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= render 'form', user: @user %>

</div>

<div class = "btn-group">
  <%= link_to 'Register', new_user_path, :class => "btn btn-warning btn-lg"  %>
</div>

