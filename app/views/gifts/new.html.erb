<h2> New Gift Idea </h2>

<div class="form-horizontal">
  <%= form_with(model: [@receiver, @receiver.gifts.build ], local: true) do |f| %>
    <div class="form-group">
      <%= f.label "Title", class: "control-label col-sm-1"%>
      <div class = "col-sm-4">
        <%= f.text_field :title, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Description", class: "control-label col-sm-1"%>
      <div class = "col-sm-4">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Cost", class: "control-label col-sm-1" %>
      <div class = "col-sm-4">
        <%= f.text_field :cost, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Link", class: "control-label col-sm-1" %>
      <div class = "col-sm-4">
        <%= f.text_field :link, class: "form-control" %>
      </div>
    </div>
      <%= f.hidden_field :giver_id, :value => current_user.id %>
      <%= f.hidden_field :receiver_id, :value => params[:receiver_id] %>
    <div class = "control-label col-sm-2">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div> <br><br><br>
  <% end %>
</div>

<div class = 'btn-group'>
  <%= link_to 'Back', root_path, :class => "btn btn-primary"  %>
</div>